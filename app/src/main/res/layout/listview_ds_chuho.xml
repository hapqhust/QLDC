<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1050px"
    android:layout_height="250px"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="30dp">

    <androidx.cardview.widget.CardView
        android:layout_width="1050px"
        android:layout_height="230px"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"

        app:cardBackgroundColor="#fefefe"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewPerson"
                android:layout_width="71dp"
                android:layout_height="66dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/usermale"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/textNameChuHo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageViewPerson"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:text="Tên chủ hộ"
                android:textStyle="bold"
                android:textColor="#515151"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textMaIDHo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="24dp"
                android:text="ID Hộ"
                android:textColor="#7C7C7C"
                android:textSize="15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textSDT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageViewPerson"
                android:layout_below="@id/textNameChuHo"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:text="Số điện thoại"
                android:textSize="17sp"
                android:textColor="#7C7C7C" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
